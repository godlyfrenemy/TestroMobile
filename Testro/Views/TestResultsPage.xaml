<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:Testro.ViewModels" x:DataType="viewmodels:TestResultsViewModel"
             x:Class="Testro.Views.TestResultsPage">
    
    
    <ContentPage.Content>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="Ваш результат:"
                   FontSize="Large"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand" />
                <Label Text="{Binding CorrectAnswersToTotal}"
                   FontSize="80"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout Grid.Row="1">
                <Label Text="Загальна оцінка:"
                   FontSize="Large"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand" />
                <Label Text="{Binding TotalMark}"
                   FontSize="140"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>